<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="main.css">
		<title>Etsy</title>
	
	</head>
		<body>
			<div class="main_box">
			<div class="header">
				<h1> Etsy </h1>

				<div class="category_list">
					<li> Clothing & Accessories     Jewelry    Craft Supplies & Tools    Weddings  Entertainment    Home & Living    Kids & Baby    Vintage   </li>
					
				</div>
			</div>
		

			<div class="side_bar">
				<ul>
					<h3>All Categories</h3>
						<li class="list_links">Home & Living</li>
						<li class="list_links">Art & Collectibles</li>
						<li class="list_links">Weddings</li>
						<li class="list_links">Clothing</li>
						<li class="list_links">Paper & Party Supplies</li>
						<li class="list_links">Jewelry</li>
						<li class="list_links">Accessories</li>
						<li class="list_links">Craft Supplies & Tools</li>
						<li class="list_links">Bags & Purses</li>
						<li class="list_links">Bath & Beauty</li>
						<li class="list_links">Shoes</li>
						<li class="list_links">Books, Movies & Music</li>
						<li class="list_links">Electronics & Accessories</li>
						<li class="list_links">Toys & Games</li>
						<li class="list_links">Pet Supplies</li>
					
				</ul>
			</div>

			<div class="listings">	
				<% listings.each do |listing| %>
					<div class="item">
						<div class="pic">
							<img class="pic_img" src="<%= listing["Images"][0]["url_170x135"]%>">
					    </div>
					    <div class="item_footer">
					    	<div class="price">
					    		<%= listing["price"] %>
					    	</div>
					    	<div class="shops">
					    		<%= listing["Shop"]["shop_name"] %>
					    	</div>
					    </div>
					</div>	
				<% end %>
			</div>
		</div>
		</body>
</html>
